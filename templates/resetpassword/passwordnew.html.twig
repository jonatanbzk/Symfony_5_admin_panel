{% extends 'base.html.twig' %}

{% block body %}
    <div class="container text-center">
        <p class="mt-5">Forgot Password ?</p>
        {{ form_start(resetpasswordForm) }}
        {{ form_row(resetpasswordForm.email) }}
        <button class="btn btn-primary mt-4 mb-5" id="btnLogout" type="submit">
            Send me reset password instructions
        </button>
        {{ form_end(resetpasswordForm) }}
        <p class="mt-5">Back to login page</p>
        <a href="{{ path('app_login') }}">Log in</a>
    </div>
{% endblock %}

